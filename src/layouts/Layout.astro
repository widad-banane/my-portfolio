---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="John Doe - Business Intelligence Developer Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="John Doe" />
    <meta name="keywords" content="Business Intelligence, BI Developer, Data Analytics, Dashboard Development" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <slot />
  </body>
</html>
